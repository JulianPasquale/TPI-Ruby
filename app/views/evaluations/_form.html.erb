<%= simple_form_for [@course, @evaluation], html: { class: 'form-horizontal' } do |form| %>
  <% if evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
      <% evaluation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <%= form.input :tittle, wrapper_html: { class: 'col-6' } %>
  </div>

  <div class="row">
    <%= form.input :min_grade, id: :evaluation_min_grade, wrapper_html: { class: 'col-6' } %>
  </div>

  <div class="row">
    <%= form.input :date, id: :evaluation_date, wrapper_html: { class: 'col-6' } %>
  </div>

  <label>Course: </label>
  <%= @course.name %>

  <div class="actions" style="text-align: center;">
    <%= form.submit class:'btn btn-success' %>
  </div>
<% end %>
