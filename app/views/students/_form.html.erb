<%= simple_form_for [@course,student], 
      html: { class: 'form-horizontal' } do |form| 
%>

  <div class="row">
    <%= form.input :name, wrapper_html: { class: 'col-6' } %>
    <%= form.input :lastname, wrapper_html: { class: 'col-6' } %>
  </div>

  <div class="row">
    <%= form.input :dni, wrapper_html: { class: 'col-6' } %>
    <%= form.input :number, wrapper_html: { class: 'col-6' } %>
  </div>    

  <div class="actions" style="text-align: center;">
    <%= link_to t(:back), 
          course_students_path(@course), 
          class: 'btn btn-primary' 
    %>
    <%= form.submit t(:submit), class: 'btn btn-success' %>
  </div>

<% end %>
