<br>
<h1 class="text-center"> 
  <%= t(:students) %>
  <%= link_to t(:new), 
        new_course_student_path, 
        class: 'btn btn-success', 
        style: 'margin-left:15px' 
  %>        
</h1>

<br>
<% if not @students.empty? then %>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> 
          <%= t(:name, scope: [:activerecord, :attributes, :student]) %>           
        </th>
        <th scope="col"> 
          <%= t(:lastname, scope: [:activerecord, :attributes, :student]) %>
        </th>
        <th scope="col"> 
          <%= t(:dni, scope: [:activerecord, :attributes, :student]) %>
        </th>
        <th scope="col"> 
          <%= t(:number, scope: [:activerecord, :attributes, :student]) %>
        </th>
        <th scope="col"> <%= t(:course) %>         </th>
        <th colspan="2">                           </th>
      </tr>
    </thead>
    <tbody>
      <%= render @students %>
    </tbody>
  </table>

<% else %>
  
  <div class="alert alert-danger" role="alert">
    <%= t(:add_students) %>
  </div>

<% end %>
<br>
