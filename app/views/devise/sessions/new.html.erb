<div class="container">
  <%= form_for resource, as: resource_name, 
        url: session_path(resource_name),
        class: 'form-signin' do |f| 
  %>

        <%= image_tag 'ruby.png', width: 72, height: 72, 
              style: 'margin-bottom: 30px;' 
        %>

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        
        <div class="row">
          <div class="offset-sm-3"></div>
          <%= f.label :email, class: 'sr-only' %>
          <%= f.email_field :email, autofocus: true, 
                class: 'form-control col-sm-6',
                placeholder: 'Email addres' 
          %>
        </div>

        <br>

        <div class="row">
          <div class="offset-sm-3"></div>
          <%= f.label :password, class: 'sr-only' %>
          <%= f.password_field :password, autocomplete: "off", 
                class: 'form-control col-sm-6',
                placeholder: 'Password' 
          %>
        </div>

        <br>

          <div class="checkbox mb-3">
            <% if devise_mapping.rememberable? -%>
              <div class="field form-check">
                <%= f.label :remember_me  do %>
                Remember me
                  <%= f.check_box :remember_me %>
                <% end %>
              </div>
            <% end -%>
          </div>

        <div class="row">
          <div class="offset-sm-4"></div>
          <%= f.submit "Log in", class: 'col-sm-4 btn btn-lg btn-primary btn-block' %>
        </div>

        <%- if alert.present? then -%> 
          <p style="color:red;" class="alert"><%= alert %></p>
        <%- end -%>

<% end %>

</div>
