<%= simple_form_for @course, 
      html: { class: 'form-horizontal' } do |form| 
%>

  <div class="row">
    <%= form.input :year, wrapper_html: { class: 'col-6' } %>
    <%= form.input :name, wrapper_html: { class: 'col-6' } %>
  </div>

  <div class="actions" style="text-align: center;">
    <%= form.submit class: 'btn btn-success' %>
  </div>

<% end %>
